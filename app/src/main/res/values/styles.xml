<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/arapawa</item>
        <item name="md_background_color">@color/arapawa</item>
    </style>

    <style name="button_style">
        <item name="background">@drawable/button_shape</item>
        <item name="backgroundTint">@color/arapawa</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="table_cell_style">
        <item name="android:textSize">36sp</item>
        <item name="android:visibility">gone</item>
        <item name="minWidth">75dp</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>