<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Probably" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blanched_almond</item>
        <item name="colorPrimaryVariant">@color/half_baked</item>
        <item name="colorOnPrimary">@color/snow</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/arapawa</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Action bar text color. -->
        <item name="titleTextColor">@color/baltic_sea</item>

        <!-- Back button color. -->
        <item name="colorControlNormal">@color/baltic_sea</item>
    </style>
</resources>