<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_baked"
    tools:context=".view.SpecificDistributionActivity">

    <include
        android:id="@+id/include"
        layout="@layout/header" />

    <ScrollView
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:scrollbars="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/half_baked"
                android:gravity="center"
                android:stretchColumns="*">

                <TableRow
                    android:divider="@color/snow"
                    android:showDividers="middle">

                    <TextView
                        style="@style/table_cell_style"
                        android:text="\u03BE"
                        android:textSize="36sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/event_0"
                        style="@style/table_cell_style"
                        android:text="0" />

                    <TextView
                        android:id="@+id/event_1"
                        style="@style/table_cell_style"
                        android:text="1" />

                    <TextView
                        android:id="@+id/event_2"
                        style="@style/table_cell_style"
                        android:text="2" />

                    <TextView
                        android:id="@+id/event_3"
                        style="@style/table_cell_style"
                        android:text="3" />

                    <TextView
                        android:id="@+id/event_4"
                        style="@style/table_cell_style"
                        android:text="4" />

                    <TextView
                        android:id="@+id/event_5"
                        style="@style/table_cell_style"
                        android:text="5" />

                    <TextView
                        android:id="@+id/event_6"
                        style="@style/table_cell_style"
                        android:text="6" />

                    <TextView
                        android:id="@+id/event_7"
                        style="@style/table_cell_style"
                        android:text="7" />
                </TableRow>

                <TableRow
                    android:divider="@color/snow"
                    android:showDividers="middle">

                    <TextView
                        style="@style/table_cell_style"
                        android:text="p"
                        android:textSize="36sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/p0"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p1"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p2"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p3"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p4"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p5"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p6"
                        style="@style/table_cell_style" />

                    <TextView
                        android:id="@+id/p7"
                        style="@style/table_cell_style" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <TextView
        android:id="@+id/math_expect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_layout"
        android:text="M\u03BE = "
        android:textColor="@color/snow"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/math_expect_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_layout"
        android:layout_toEndOf="@id/math_expect"
        android:textColor="@color/snow"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/dispersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_layout"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@id/math_expect_value"
        android:text="D\u03BE = "
        android:textColor="@color/snow"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/dispersion_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_layout"
        android:layout_toEndOf="@id/dispersion"
        android:gravity="center_horizontal"
        android:textColor="@color/snow"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/snow"
        android:id="@+id/whatisthis"
        android:layout_below="@+id/dispersion_value"/>

</RelativeLayout>